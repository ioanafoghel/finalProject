<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/store_name_id"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/image_view_id"
        android:text="Store:"
        android:textColor="#000000"
        android:gravity="center"/>

    <TextView
        android:id="@+id/store_address_id"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/store_name_id"
        android:layout_alignParentRight="true"
        android:text="Address:"
        android:textColor="#000000"
        android:gravity="center" />
    <Button
        android:id="@+id/map_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Map"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_below="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/image_view_id"
        android:id="@+id/view" />

</RelativeLayout>